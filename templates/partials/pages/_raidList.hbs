<div class="raidlistWrapper">
{{#each raids}}
    <button class="collapsible">
        <h2>{{gym.name}}</h2>
        <h3>{{#if form}} {{form.display_name}} {{else}} Tier {{egg_tier}} egg {{/if}}</h3>
        <p>{{#if form}} <i class="fas fa-hourglass-end"></i> {{ends}} {{else}} <i class="far fa-clock"></i> {{hatches}} {{/if}}</p>

    </button>
    <div class="content">
        <div class="createGroupWrapper">
            <div class="timePicker">
                <label class="timePicker" for="{{gym.name}}">Tidspunkt: </label>
                <input type="time" id="{{gym.name}}"class="timePicker" name="appt" min="06:00" max="21:00" value="14:30" pattern="[0-9]{2}:[0-9]{2}" required>
            </div>
            <button class="createGroup">Opret gruppe</button>
        </div>
        {{#each groups}}
            <hr>
            <div class="raidGroup">
                <p>
                    <i class="fas fa-fist-raised"></i> {{killTime}}
                </p>
            </div>
        {{/each}}
    </div>
{{/each}}
</div>